{
  "name": "Test Epoch",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The GraphQL debugging tool for Apollo Client in the Chrome developer console.",
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_popup": "./panel.html",
    "default_title": "OPEN!!!"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "activeTab", "<all_urls>", "tabs"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  }
}
